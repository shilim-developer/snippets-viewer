{
  "name": "snippets-viewer",
  "displayName": "snippets-viewer",
  "description": "代码段查看器",
  "version": "0.0.1",
  "publisher": "shilim",
  "license": "MIT",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:plugin-view",
    "onCommand:itemClick"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shilim-developer/snippets-viewer"
  },
  "icon": "img/logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippets-viewer.refresh",
        "title": "Refresh List",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-viwer",
          "title": "代码段查看器",
          "icon": "img/left_icon.svg"
        }
      ]
    },
    "views": {
      "snippet-viwer": [
        {
          "id": "plugin-view",
          "name": "扩展目录"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "snippets-viewer.refresh",
          "when": "view == plugin-view",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SnippetViewer",
      "properties": {
        "SnippetViewer.customUrl": {
          "type": "string",
          "default": "",
          "description": "自定义配置js路径"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/prettier": "^2.6.3",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "json5": "^2.2.1"
  }
}
